<h1> {{user.username}}'s Teams</h1>

<h3 class='white'>*Click to go to a Team*</h3>


{{#each teams}}
<div>
    <h2 class='see-games'><a href='/users/{{../user._id}}/teams/{{this._id}}/games'>
            {{this.name}}
        </a> </h2>
</div>
<form action='/users/{{../user._id}}/teams/{{this._id}}?_method=DELETE' method='POST'>
            <input type="submit" value='Remove Team'>
        </form>

{{/each}}

<br>
<br>
<a href='/users/{{user._id}}/teams/new'><button>Add New Team</button></a>
